<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Komeat.Text.Mensa.Subtitle" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="Komeat.Text.Mensa.Title" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:spacing">24sp</item>
    </style>

    <style name="Komeat.Text.Meal.Title" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/onPrimary</item>

    </style>

    <style name="Komeat.Text.Meal.Pill" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>
    
    <style name="Komeat.Text.Meal.Comment" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:spacing">24sp</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Komeat.Text.Mensa.Title</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:background">@drawable/textview_background</item>
        <item name="backgroundTint">@color/onSecondary</item>
    </style>

</resources>
